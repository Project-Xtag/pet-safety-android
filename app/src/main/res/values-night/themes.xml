<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Pet Safety Dark Theme -->
    <style name="Theme.PetSafety" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color (adjusted for dark mode) -->
        <item name="colorPrimary">@color/brand_orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">#6B3A00</item>

        <!-- Secondary color (Teal) -->
        <item name="colorSecondary">@color/teal_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">#1C1B1F</item>
        <item name="colorSurfaceVariant">@color/card_background_dark</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- Error color -->
        <item name="colorError">#FFB4AB</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.PetSafety.Splash" parent="Theme.PetSafety">
        <item name="android:windowBackground">@color/background_dark</item>
    </style>
</resources>
