<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Pet Safety Light Theme -->
    <style name="Theme.PetSafety" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/brand_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/peach_background</item>

        <!-- Secondary color (Teal) -->
        <item name="colorSecondary">@color/teal_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/card_background_light</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/brand_orange</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Error color -->
        <item name="colorError">@color/error_color</item>
    </style>

    <!-- Splash screen theme (Android 12+ SplashScreen API) -->
    <style name="Theme.PetSafety.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/peach_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">800</item>
        <item name="postSplashScreenTheme">@style/Theme.PetSafety</item>
    </style>
</resources>
